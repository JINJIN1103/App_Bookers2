<main>
<dev class="container px-5 px-sm-0">
  <dev class="row">
   <dev class="col-md-3">
     <%= render partial: 'users/sidebar', locals: { user: @user, book: @book } %>
   </dev>


   <dev class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-hover table-inverse">
    <thead>
        <tr>
          <th>image</th>
          <th>Name</th>
          <th colspan="0"></th>
        </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td>
          <!--ここを治す@userのところ_ |book| ←このローカル変数に.userでOK（indexにURLはないが、@booksで中身を全部持ってきている＝user_idも持ってきているのでレコード毎に区切っているbookに.userをつけた-->
          <%= link_to user_path(user.id) do %>
           <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <% end %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to "show", user_path(user.id)  %>
          </td>
        </tr>

    <% end %>
    </tbody>
    </table>
    </dev>
  </dev>
</dev>
</main>
