<main>
<dev class="container px-5 px-sm-0">
  <dev class="row">
   <dev class="col-md-3">
     <%= render partial: 'users/sidebar', locals: { user: @user, book: @book } %>
   </dev>



  <dev class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
    <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(params[:id]) do %>
            <%= @books.title %>
            <% end %>
            </td>
          <td>
            <%= @books.body %>
          </td>

          <td>
            <% if @books.user == current_user %>
            <div class=row><%= link_to "Edit", edit_book_path(params[:id]) %></div>
            <% end %>
          </td>

          <td>
            <% if @books.user == current_user %>
            <div class=row><%= link_to "Destroy", book_path(params[:id]), method: :delete ,data: { confirm: '本当に消しますか？' } %></div>
            <% end %>
          </td>

        </tr>
</div>
</div>
</div>
</main>